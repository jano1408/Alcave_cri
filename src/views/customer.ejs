<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Mantenimiento de Clientes</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta.2/css/bootstrap.min.css" integrity="sha384-PsH8R72JQ3SOdhVi3uxftmaW6Vc51MKb0q5P2rRUpPvrszuE4W1povHYgTpBfshb" crossorigin="anonymous">

  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <a href="/" class="navbar-brand">Mantenimiento de Clientes</a>
    </nav>

    <div class="row">
      <div class="col-md-6 mt-4 text-center">
        <table class="table table-striped table-bordered">
          <tr>
            <th>Nro.</th>
            <th>Nombre Cliente</th>
            <th>Dirección</th>
            <th>Teléfono</th>
            <th>Acciones</th>
          </tr>
          <% for (var i = 0; i < customer.length; i ++) { %>
            <tr>
              <td><%= (i+1) %></td>
              <td><%= customer[i].name %></td>
              <td><%= customer[i].address %></td>
              <td><%= customer[i].phone %></td>
              <td>
                <a href="/delete/<%= customer[i].id %>" class="btn btn-danger">Eliminar</a>
              </td>
              <td>
                <a href="/update/<%= customer[i].id %>" class="btn btn-info">Editar</a>
              </td>
            </tr>
          <% } %>
        </table>
      </div>

      <div class="col-md-6 mt-4 card">
        <form class="card-body" action="/save" method="post">
          <h3 class="card-title">Agregar Clientes</h3>
          <div class="form-group">
            <input name="name" type="text" class="form-control" placeholder="Nombre Cliente">
          </div>
          <div class="form-group">
            <input name="address" type="text" class="form-control" placeholder="Dirección">
          </div>
          <div class="form-group">
            <input name="phone" type="text" class="form-control" placeholder="Teléfono">
          </div>
          <button type="submit" class="btn btn-primary">
            Agregar
          </button>
        </form>
      </div>
    </div>
  </body>
</html>
