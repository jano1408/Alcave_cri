        <div class="row">
          <div class="col-md-16 mt-4 text-center">
            <table class="table table-striped table-bordered">
              <tr>
                <th>Factura</th>
                
                <th>Fecha</th>
                <th>Proveedor</th>
                <th>Nombre Proveedor</th>
                
                <th>Monto Base</th>
                <th>IVA</th>
                <th>% IVA</th>
                <th>Total</th>
                <th>Acciones</th>
              </tr>
              <% for (var i = 0; i < facturas.length; i ++) { %>
                <tr>
                  <td><%= facturas[i].numfac %></td>
                  
                  <td><%= facturas[i].fecfac.toLocaleDateString()  %></td>
                  <td><%= facturas[i].riffac %></td>
                  <td><%= facturas[i].nompro %></td>
                  
                  <td><%= facturas[i].basfac.toLocaleString('de-DE') %></td>   
                  <td><%= facturas[i].ivafac.toLocaleString('de-DE') %></td>
                  <td><%= facturas[i].porcentaje %></td>
                  <td><%= (facturas[i].basfac + facturas[i].ivafac).toLocaleString('de-DE') %></td>
                  <td>
                    
                    <a href="/facturas/entrar" class="btn btn-success">Agregar</a>
                    <a href="/facturas/update/<%= facturas[i].idfac %>" class="btn btn-info">Editar</a>
                    <a href="/facturas/delete/<%= facturas[i].idfac %>" class="btn btn-danger">Eliminar</a>
                  
                  </td>
                </tr>
              <% } %>
            </table>
